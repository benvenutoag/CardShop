@model CardShop.Models.CarritoItem

<h3>Está seguro en borrar el Item?</h3>

<div>
    @Html.DisplayNameFor(model => model.Producto.Nombre)


    <form asp-action="BorrarItem">
        <input type="hidden" asp-for="CarritoItemId" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </form>

    <form asp-action="CarritoUsuario">
        <input type="hidden" asp-for="@Model.Carrito.UsuarioID" />
        <input type="submit" value="Volver atrás" class="card-columns" />

    </form>

</div>