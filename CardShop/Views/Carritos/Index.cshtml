@model IEnumerable<CardShop.Models.Carrito>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carrito</h1>

<p>
    <a asp-action="Create">Crear Nuevo Carrito</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarritoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CarritoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.CarritoId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
