@model CardShop.Models.CarritoItem



<h4>CarritoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarCantidad">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarritoItemId" />
            <input type="hidden" asp-for="CarritoId" />
            <input type="hidden" asp-for="ProductoId" />
            @Model.Producto.Nombre
            <br />
            @Model.Producto.Descripcion
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>